enum EltwiseOpType: uint32 {
  Add,
  Multiply,
  Subtract,
  Relu,
  GreaterEqual,
  Sqrt,
  Div,
  Sigmoid,
  Reciprocal,
  Exp,
  Maximum,
  Abs,
  Neg,
  Rsqrt,
  Typecast,
  Equal,
  NotEqual,
  LessEqual,
  LessThan,
  GreaterThan,
  LogicalAnd,
  LogicalOr,
  LogicalXor,
  LogicalNot,
  BitwiseAnd,
  BitwiseOr,
  BitwiseXor,
  BitwiseNot,
  Cbrt,
  Minimum,
  Ceil,
  Sin,
  Cos,
  Log,
  Log1p,
  Expm1,
  Sign,
  Remainder,
  IsFinite,
  Floor,
  Where,
  Gelu,
  Clamp,
  LeakyRelu,
  Scatter,
  Tan,
  Tanh,
  Power
}

table ClampOpParams {
  min: float;
  max: float;
}

table EltwiseOpWithFloatParams {
  parameter: float;
}

union EltwiseOpParams {
  ClampOpParams,
  EltwiseOpWithFloatParams,
}

table EltwiseOp {
  type: EltwiseOpType;
  ins: [tt.target.ttnn.TensorRef];
  out: tt.target.ttnn.TensorRef;
  params: EltwiseOpParams;
}

